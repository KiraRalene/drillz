<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-1 col-sm-7">
      <h1 class="leaderboard_title"> Leaderboard</h1>
      <table class="table">
        <thead>
          <th>Name</th>
          <th>Points</th>
          <th>Donuts<%=image_tag('doughnut.png', :class=>'small-doughnut')%></th>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.points %></td>
            <td><%= user.donuts %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-xs-12 col-sm-3 user-profile">
      <% if user_signed_in? %>
        <div class="profile-picture">
          <% if current_user.is_admin?  %>
            <%= image_tag("chewie.png", :class=>"avatar")%>
          <% else %>
            <%= image_tag("light_avatar.png", :class=>"avatar")%>
          <% end %>
        </div>
        <div class="user-profile-stats">
          <h2><%= current_user.first_name %></h2>
          <p><%= current_user.email %></p>
          <p>Points: <%= current_user.points %>
          <p>Donuts: <%= current_user.donuts %>
            <% if current_user.donuts > 0 %>
              <%= image_tag('doughnut.png', :class=>'small-doughnut')%>
            <% end %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
