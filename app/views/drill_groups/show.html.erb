<!-- drill group -->

<h1>Drill Group: <%= @drill_group.name %></h1>


<%= button_to 'Edit Group', edit_drill_group_path(@drill_group),
                            method: :get,
                            class: 'btn btn-primary' %>

<h3><%= @drill_group.description %></h3>

<hr>

<!-- drill form -->
<div>
  <h2>Add New Drill</h2>
    <h4>Drill Description</h4>
    <%= render partial: 'drill_form', locals: {drill: @drill} %>
</div>
<hr>

<!-- drill list -->
<% if @drills.present? %>
  <% @drills.each do |drill| %>
    <div class="drill">
      <h3><%= drill.description %></h3>
        <%# ðŸ‘‡ need to change after implementing SlideDown thing %>
      <button id="slide" class="btn btn-primary">Edit</button>
      <%= button_to 'Delete', nil, method: :delete, class: 'btn btn-primary' %>
        <div id='show-form' class="edit-form">
        <%# ðŸ‘‡ this form will slide down when 'Edit' button clicked %>
        <%# if true %>
          <%= render partial: 'edit_drill_form', locals: {drill: drill} %>
        <%# end %>
        </div>
    </div>
  <% end %>
<% end %>
